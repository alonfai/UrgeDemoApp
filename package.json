{
  "name": "urge-api-products",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "cypress:open": "cypress open",
    "cypress:open-ct": "cypress open-ct",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:generate-output": "jest --json --outputFile=.jest-test-results.json",
    "test:e2e": "start-server-and-test dev 3000 cypress:open",
    "cypress:run": "cypress run",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-lint": "eslint . --ext ts --ext tsx",
    "format": "prettier --write .",
    "test-all": "npm run check-format && npm run check-lint && npm run check-types && npm run build",
    "storybook": "start-storybook -s ./public -p 6006",
    "prebuild:storybook": "npm run test:generate-output",
    "build:storybook": "build-storybook -c .storybook -o build/"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.13",
    "@chakra-ui/react": "^1.6.4",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@fontsource/open-sans": "^4.4.5",
    "@fontsource/raleway": "^4.4.5",
    "cors": "^2.8.5",
    "framer-motion": "^4.1.17",
    "nanoid": "^3.1.23",
    "next": "11.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.9.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-query": "^3.17.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@chakra-ui/theme-tools": "^1.1.7",
    "@cypress/code-coverage": "^3.9.7",
    "@cypress/react": "^5.9.1",
    "@cypress/webpack-dev-server": "^1.4.0",
    "@storybook/addon-a11y": "^6.3.0",
    "@storybook/addon-actions": "^6.3.0",
    "@storybook/addon-essentials": "^6.3.0",
    "@storybook/addon-jest": "^6.3.0",
    "@storybook/addon-links": "^6.3.0",
    "@storybook/react": "^6.3.0",
    "@testing-library/cypress": "^7.0.6",
    "@testing-library/react": "^12.0.0",
    "@types/cors": "^2.8.10",
    "@types/jest": "^26.0.23",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^15.12.4",
    "@types/react": "17.0.11",
    "babel-loader": "^8.2.2",
    "babel-plugin-istanbul": "^6.0.0",
    "cypress": "^7.6.0",
    "eslint": "7.29.0",
    "eslint-config-next": "11.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "html-webpack-plugin": "^4.5.2",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "lint-staged": "^11.0.0",
    "loglevel": "^1.7.1",
    "msw": "^0.30.0",
    "prettier": "^2.3.1",
    "start-server-and-test": "^1.12.5",
    "ts-jest": "^27.0.3",
    "typescript": "4.3.4"
  }
